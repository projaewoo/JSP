<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Welcome to 1105</display-name>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <error-page>
  	<exception-type>java.lang.NumberFormatException</exception-type>
  	<location>/numberformat.html</location>
  </error-page>
  
  <error-page>
  	<exception-type>java.lang.ArithmeticException</exception-type>
  	<location>/arithmetic.html</location>
  </error-page>
  
  <error-page>
  	<error-code>404</error-code>
  	<location>/404.html</location>		<!-- 404발생 시, 유저에게 보여줄 페이지. -->
  </error-page>
  
  <error-page>
  	<error-code>500</error-code>
  	<location>/500.html</location>		<!-- 500발생 시, 유저에게 보여줄 페이지. -->
  </error-page>
  
</web-app>